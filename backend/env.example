# Configurações da Aplicação
APP_NAME=ObsidianAI Sync
APP_VERSION=1.0.0
DEBUG=true

# Configurações do Servidor
HOST=0.0.0.0
PORT=8000

# Configurações de Segurança
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///./obsidian_ai.db

# Configurações da Claude API
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.3

# Rate Limiting
CLAUDE_REQUESTS_PER_MINUTE=50
CLAUDE_REQUESTS_PER_DAY=1000

# Fallback/Retry
CLAUDE_RETRY_ATTEMPTS=3
CLAUDE_RETRY_DELAY=5

# Configurações do Redis
REDIS_URL=redis://localhost:6379

# Configurações de Sincronização
DEFAULT_VAULT_PATH=/path/to/your/obsidian/vault
SYNC_METHOD=filesystem

# Configurações de Logs
LOG_LEVEL=INFO
LOG_FILE=logs/obsidian_ai.log

# Configurações de CORS
ALLOWED_ORIGINS=["*"]

# Configurações de Upload
MAX_TEXT_LENGTH=50000
MAX_FILE_SIZE=10485760 